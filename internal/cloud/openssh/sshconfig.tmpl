# Autogenerated by codex. Do not modify manually.
# ConfigVersion: {{ .ConfigVersion }}

Host proxy.codex.sh
	StrictHostKeyChecking no
	UserKnownHostsFile "{{ .ConfigDir }}/known_hosts"

Host gateway.codex.sh gateway.dev.codex.sh
	HostKeyAlgorithms ssh-ed25519
	StrictHostKeyChecking yes
	UserKnownHostsFile "{{ .ConfigDir }}/known_hosts"

Host *.codex-vms.internal
	Port 2222
	ProxyJump proxy@proxy.codex.sh
	IdentityFile "{{ .ConfigDir }}/keys/%h"
	PreferredAuthentications publickey
	StrictHostKeyChecking no
	UserKnownHostsFile "{{ .ConfigDir }}/known_hosts"
	ServerAliveInterval 50
	ServerAliveCountMax 3
	ControlMaster auto
	ControlPath "{{ .ConfigDir }}/sockets/%h"
	ControlPersist 300

{{- if .DebugGateway.Host }}

Host gateway.codex-debug {{ .DebugGateway.Host }}
	Hostname {{ .DebugGateway.Host }}
	Port {{ .DebugGateway.Port }}
	StrictHostKeyChecking no
	UserKnownHostsFile "{{ .ConfigDir }}/known_hosts_debug"

{{- end }}
